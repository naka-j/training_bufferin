<div id="timesheets-edit">
  <%= render 'shared/errors', errors: @timesheet.errors %>
  <div class="form-area">
    <%= form_for @timesheet, url: "#{timesheets_path}/#{params[:id]}/#{@timesheet.day}" do |f| %>
        <%= render 'start_form', f: f if params[:mode] != Timesheet::EDIT_TARGET_END %>
        <%= render 'end_form', f: f if params[:mode] == Timesheet::EDIT_TARGET_END %>
    <% end %>
  </div>
</div>
